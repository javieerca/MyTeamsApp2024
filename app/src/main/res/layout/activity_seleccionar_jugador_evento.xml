<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    >

    <Button
        android:id="@+id/guardarButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/multipleListview"
        android:layout_alignParentTop="true"
        android:text="Guardar" />

    <ListView
        android:id="@+id/multipleListview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="-724dp"
        android:choiceMode="singleChoice"
        android:divider="@color/black"
        android:dividerHeight="2dp">

    </ListView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/guardarButton3"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Jugadores"
        android:textAlignment="center"
        android:textSize="34sp" />

</RelativeLayout>