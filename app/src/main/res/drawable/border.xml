<!-- res/drawable/border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/transparent"/> <!-- Fondo transparente -->
    <stroke
        android:width="1dp"
        android:color="@color/grisClaro"/> <!-- Color del borde -->
    <corners android:radius="5dp"/> <!-- Radio de las esquinas del borde -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/> <!-- Padding dentro del borde -->
</shape>
